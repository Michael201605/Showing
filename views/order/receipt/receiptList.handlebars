{{#section 'head'}}

{{/section}}
<div class="container main">

    <div class="row">
        <div class="col-lg-3">
            <div class="row">
                <div class="col-lg-12">
                    <label class="col-md-2 control-label">{{{__ "Informations: "}}}</label>
                    <br>
                    <br>
                    <ul id="infos" class="info">

                    </ul>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-lg-12">
                    <label class="col-md-2 control-label">{{{__ "Errors"}}}</label>
                    <br>
                    <br>
                    <ul id="errors" class="error">

                    </ul>
                </div>
            </div>

        </div>
        <div class="col-lg-6">
            <table id="receiptsTable" class="table table-bordered table-hover">
                <caption>{{{__ "Receipt Management"}}}</caption>
                <thead>
                <tr>
                    <th>{{{__ "Ident"}}}</th>
                    <th>{{{__ "ProductIdent"}}}</th>
                    <th>{{{__ "UnitSize"}}}</th>
                    <th>{{{__ "PackagingType"}}}</th>
                </tr>
                </thead>
                <tbody>
                {{#each receipts}}
                    <tr id="{{id}}">
                        <td><a href="/order/receipt/receiptDetail/:{{id}}">{{ident}}</a></td>
                        <td>{{productIdent}}</td>
                        <td>{{actualUnitSize}}</td>
                        <td>{{packagingType}}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
        <div class="col-lg-3">
            <button id="newReceipt" class="btn btn-primary">{{{__ "New"}}}</button>
            <button id='deleteReceipt' class="btn btn-danger">{{{__ "Delete"}}}</button>
        </div>
    </div>
</div>
{{#section 'jquery'}}

    <script src="/js/receipts.js"></script>

{{/section}}



