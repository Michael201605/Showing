{{#section 'head'}}
    <link href="/vendor/jquery.dataTables.min.css" rel="stylesheet">
    <style>
        .title-Detail {
            padding-left: 25%;
            color: snow;
        }

        header {
            background-color: lightsteelblue;
        }

        .right-button {
            padding-top: 50%;
        }

        .details {
            padding-top: 1%;
            background-color: skyblue;
            padding-bottom: 15%;
        }

        .info {
            color: green;
        }

        .error {
            color: red;
        }
    </style>
{{/section}}
<div class="container main">

    <div class="row">
        <div class="col-lg-3">
            <div class="row">
                <div class="col-lg-12">
                    <label class="col-md-2 control-label">{{{__ "Informations: "}}}</label>
                    <br>
                    <br>
                    <ul id="infos" class="info">

                    </ul>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-lg-12">
                    <label class="col-md-2 control-label">{{{__ "Errors"}}}</label>
                    <br>
                    <br>
                    <ul id="errors" class="error">

                    </ul>
                </div>
            </div>

        </div>
        <div class="col-lg-6">
            <input id="receipts" type="text" class="hidden" value="{{receipts}}"/>
            <input id="state" type="text" class="hidden" value="{{state}}"/>
            <table id="processOrdersTable" class="table table-bordered table-hover">
                <caption>{{{__ "PrcoessOrder Management"}}}</caption>
                <thead>
                <tr>
                    <th>{{{__ "Ident"}}}</th>
                    <th>{{{__ "ProductIdent"}}}</th>
                    <th>{{{__ "TargetWeight"}}}</th>
                    <th>{{{__ "MixerIdent"}}}</th>
                </tr>
                </thead>
                <tbody>
                {{#each processOrders}}
                    <tr id="{{id}}">
                        <td><a href="/order/process/processOrderDetail/:{{id}}">{{ident}}</a></td>
                        <td>{{productIdent}}</td>
                        <td>{{targetWeight}}</td>
                        <td>{{mixerIdent}}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
        <div class="col-lg-3">
            <button id="newProcessOrder" class="btn btn-primary">{{{__ "New"}}}</button>
            <button id='deleteProcessOrder' class="btn btn-danger">{{{__ "Delete"}}}</button>
        </div>
    </div>
</div>
{{#section 'jquery'}}
    <script src="/vendor/jquery.dataTables.min.js"></script>
    <script src="/js/processOrders.js"></script>

{{/section}}
