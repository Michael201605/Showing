<div class="container main">
    <div class="row">
        <div class="col-lg-12">
            <!--Navigation-->
            <nav class="navbar navbar-inverse">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="#">FLCos</a>
                    </div>

                    <div class="collapse navbar-collapse" id="myNavbar">
                        <ul class="nav navbar-nav">
                            <li class="active"><a href="#">{{{__ "Home"}}}</a></li>
                            {{> menus}}

                        </ul>
                        {{#if user}}
                            <ul class="nav navbar-nav navbar-right">
                                <li><a href="/logout"><span
                                        class="glyphicon glyphicon-log-out"></span> {{{__ "Logout"}}}</a></li>
                                <li><a href="/profile"><span
                                        class="glyphicon glyphicon-user"></span>
                                    {{#if user.displayName}}
                                        {{user.displayName}}
                                    {{else}}
                                        {{user.userName}}
                                    {{/if}}
                                </a></li>
                            </ul>
                        {{else}}
                            <ul class="nav navbar-nav navbar-right">
                                <li><a href="/signup"><span
                                        class="glyphicon glyphicon-registration-mark"></span>{{{__ "Sign Up"}}}</a></li>
                                <li><a href="/login"><span class="glyphicon glyphicon-log-in"></span> {{{__ "Login"}}}
                                </a></li>
                            </ul>
                        {{/if}}

                    </div>
                </div>
            </nav>
        </div>
    </div>
    <div class="row row-md-height">
        <div class="col-lg-8">
            <!--showing message-->
            <div class="form-group">
                <label class="col-md-1 control-label">{{{__ "ErrorList"}}}</label>
                <select class="col-md-11 has-error" name="ErrorList" id="errors">
                    <option></option>
                </select>
            </div>
        </div>
        <div class="col-lg-4">
            <!--tools buttons-->
            <div class="btn-group pull-right" role="group" aria-label="Basic example">
                <button type="button" class="btn btn-primary">{{{__ "Reset"}}}</button>
                <button type="button" class="btn btn-primary">{{{__ "Continue"}}}</button>
                <button type="button" class="btn btn-danger">{{{__ "Stop"}}}</button>
            </div>
        </div>
    </div>
    <div class="row">
        {{> navigations}}
    </div>
</div>

//dialog
<div id="jobListDialog" class="container main">

    <div class="row">
        <div class="col-lg-3">
            <div class="row">
                <fieldset>
                    <legend class="title">{{{__ "Informations: "}}}</legend>
                    <div class="col-lg-12 col-md-12 col-sm-12">

                        <br>
                        <br>
                        <ul id="infos" class="info">

                        </ul>
                    </div>
                </fieldset>
            </div>

            <div class="row">
                <fieldset>
                    <legend class="title">{{{__ "Errors"}}}</legend>
                    <div class="col-lg-12">

                        <br>
                        <br>
                        <ul id="errors" class="error">

                        </ul>
                    </div>
                </fieldset>
            </div>

        </div>
        <div class="col-lg-6">
            <input id="jobs" type="text" class="hidden" value="{{jobs}}"/>
            <input id="lineIdent" type="text" class="hidden" value="{{lineIdent}}"/>
            <table id="jobListTable" class="table table-bordered table-hover">
                <caption>{{{__ "Job Management"}}}</caption>
                <thead>
                <tr>
                    <th>{{{__ "Ident"}}}</th>
                    <th>{{{__ "LineIdent"}}}</th>
                    <th>{{{__ "State"}}}</th>
                </tr>
                </thead>
                <tbody>

                </tbody>
                <tfoot>
                <tr>
                    <th>{{{__ "Ident"}}}</th>
                    <th>{{{__ "LineIdent"}}}</th>
                    <th>{{{__ "State"}}}</th>
                </tr>
                </tfoot>
                <!--<tr ng-repeat="job in jobs">-->
                <!--<td>-->
                <!--<input type="checkbox" ng-model="job.selected"/>-->
                <!--</td>-->
                <!--<td><a href="/job/jobDetail/:{[{job.id}]}">{[{job.ident}]}</a></td>-->
                <!--<td>{[{job.lineIdent}]}</td>-->
                <!--<td>{[{job.displayState}]}</td>-->
                <!--</tr>-->
            </table>
        </div>
        <div class="col-lg-3">
            <form class="form-horizontal" role="form" ng-submit="createJob()">

                <button type="submit" class="btn btn-primary">{{{__ "New"}}}</button>
                <!--<button type="submit" class="btn btn-primary addnew pull-right" ng-click="copyRecipe">{{{__ "Copy"}}}</button>-->

            </form>
            <button id='deleteJob' class="btn btn-danger" ng-click="remove()">{{{__ "Delete"}}}</button>
        </div>
    </div>
</div>
{{#section 'jquery'}}
    <script src="/js/gcsState.js"></script>
